	<text xml:id="text_100_101_110" xml:lang="it" hand="#EA" type="diary" subtype="manuscript">
		<body>

			<div>	 
				<ab type="page" n="100" xml:lang="it">
					<!-- Inizio di una pagina in un documento (Pagina 100)-->
					<pb facs="#fs_pag100" xml:id="p100"/>
					<!-- Riga 1; Pagina 100-->
					<lb xml:id="r1p100" facs="#F_pag100_r1" n="1" break="no"/>
					ma giriamo sempre 
					<choice>
						<sic>tuttara</sic>
						<corr cert="high" resp="#GL">tuttora</corr>
					</choice>
					ovunque si

					<!-- Riga 2; Pagina 100-->
					<lb xml:id="r2p100" facs="#F_pag100_r2" n="2" break="no"/>
					sia necessari e pensavo che siamo

					<!-- Riga 3; Pagina 100-->
					<lb xml:id="r3p100" facs="#F_pag100_r3" n="3" break="no"/>
					molto migliori degli altri<pc type="period">.</pc> Notte

					<!-- Riga 4; Pagina 100-->
					<lb xml:id="r4p100" facs="#F_pag100_r4" n="4" break="no"/>
					nella stalla<pc type="semicolon">;</pc> si dormì bene<pc type="comma">,</pc> molto

					<!-- Riga 5; Pagina 100-->
					<lb xml:id="r5p100" facs="#F_pag100_r5" n="5" break="no"/>
					bene dopo quella gelida di Natale

					<!-- Riga 6; Pagina 100-->
					<lb xml:id="r6p100" facs="#F_pag100_r6" n="6" break="no"/>
					(Dimenticavo di dire che <del rend="overstrike">dopo la </del>

					<!-- Riga 7; Pagina 100-->
					<lb xml:id="r7p100" facs="#F_pag100_r7" n="7" break="no"/>
					alla mattina di Natale<pc type="comma">,</pc> quando

					<!-- Riga 8; Pagina 100-->
					<lb xml:id="r8p100" facs="#F_pag100_r8" n="8" break="no"/>
					si scese dalla vacillante scala del

					<!-- Riga 9; Pagina 100-->
					<lb xml:id="r9p100" facs="#F_pag100_r9" n="9" break="no"/>
					fienile tutti rigidi per il freddo

					<!-- Riga 10; Pagina 100-->
					<lb xml:id="r10p100" facs="#F_pag100_r10" n="10" break="yes"/>
					e la stanchezza del giorno prece<pc type="hyphenation">=</pc>

					<!-- Riga 11; Pagina 100-->
					<lb xml:id="r11p100" facs="#F_pag100_r11" n="11" break="no"/>
					dente<pc type="comma">,</pc>
					<subst>
						<del rend="scribble"> la </del>
							<add hand="#EA" place="above"> una </add>
					</subst>
					contadina che abitava

					<!-- Riga 12; Pagina 100-->
					<lb xml:id="r12p100" facs="#F_pag100_r12" n="12" break="yes"/>
					vicino<pc type="comma">,</pc> prendendoci per due men<pc type="hyphenation">=</pc>

					<!-- Riga 13; Pagina 100-->
					<lb xml:id="r13p100" facs="#F_pag100_r13" n="13" break="yes"/>
					dicanti<pc type="comma">,</pc> non volle lasciarci pa <pc type="hyphenation">=</pc>

					<!-- Riga 14; Pagina 100-->
					<lb xml:id="r14p100" facs="#F_pag100_r14" n="14" break="no"/>
					gare il pane e latte che ci diede<pc type="period">.</pc>

					<!-- Riga 15; Pagina 100-->
					<lb xml:id="r15p100" facs="#F_pag100_r15" n="15" break="no"/>
					Dimenticavo pure la seconda

					<!-- Riga 16; Pagina 100-->
					<lb xml:id="r16p100" facs="#F_pag100_r16" n="16" break="no"/>
